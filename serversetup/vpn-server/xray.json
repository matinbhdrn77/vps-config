        "type": "field",
        "port": 53,
        "network": "tcp,udp",
        "outboundTag": "DNS-Internal"
      },
      {
        "type": "field", // Block BitTorrent protocol
        "outboundTag": "blackhole",
        "protocol": ["bittorrent"]
      },
      {
        "type": "field",
        "outboundTag": "blackhole",
        "domain": ["ext:iran.dat:ir", "ext:iran.dat:other", "ext:iran.dat:ads"]
